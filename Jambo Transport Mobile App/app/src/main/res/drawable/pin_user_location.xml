<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop shadow -->
    <item android:left="3dp" android:top="3dp">
        <shape android:shape="oval">
            <size android:width="40dp" android:height="40dp" />
            <solid android:color="#60000000" />
        </shape>
    </item>
    
    <!-- Main circle background -->
    <item android:right="3dp" android:bottom="3dp">
        <shape android:shape="oval">
            <size android:width="40dp" android:height="40dp" />
            <solid android:color="@color/marshall_blue" />
            <stroke android:width="4dp" android:color="@android:color/white" />
        </shape>
    </item>
    
    <!-- Inner dot -->
    <item android:left="14dp" android:top="14dp" android:right="17dp" android:bottom="17dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    
    <!-- Location pin effect -->
    <item android:left="17dp" android:top="17dp" android:right="20dp" android:bottom="20dp">
        <shape android:shape="oval">
            <solid android:color="@color/marshall_blue" />
        </shape>
    </item>
</layer-list>