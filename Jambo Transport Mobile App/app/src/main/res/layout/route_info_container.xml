<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/route_info_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@drawable/card_background"
    android:elevation="8dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:visibility="gone">

    <!-- Header with title and info icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bus Routes"
            android:textColor="#37474F"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02" />

        <TextView
            android:id="@+id/info_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:text="ℹ"
            android:textColor="@color/marshall_blue"
            android:textSize="16sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/info_icon_background" />
    </LinearLayout>

    <!-- Routes Container - Horizontal (Both routes side by side) -->
    <LinearLayout
        android:id="@+id/routes_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Route A -->
        <LinearLayout
            android:id="@+id/route_a_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@drawable/route_card_background"
            android:elevation="2dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true">

            <!-- Route Badge A -->
            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/route_badge_background"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Route A Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rita Roundabout"
                    android:textColor="#37474F"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11 stops"
                    android:textColor="#78909C"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Route B -->
        <LinearLayout
            android:id="@+id/route_b_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@drawable/route_card_background"
            android:elevation="2dp"
            android:clickable="true"
            android:focusable="true">

            <!-- Route Badge B -->
            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/route_badge_background"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Route B Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Downtown → Rita"
                    android:textColor="#37474F"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 stops"
                    android:textColor="#78909C"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Selected Route Detail Container (Full width, initially hidden) -->
    <LinearLayout
        android:id="@+id/selected_route_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@drawable/route_card_selected"
        android:elevation="2dp"
        android:visibility="gone"
        android:alpha="0">

        <!-- Route Badge -->
        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/route_badge_background"
            android:gravity="center"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/selected_route_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Route Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/selected_route_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rita Roundabout"
                android:textColor="#37474F"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/selected_route_stops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17 stops"
                android:textColor="#78909C"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

            <!-- Route Status -->
            <TextView
                android:id="@+id/selected_route_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:background="@drawable/status_badge_background"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="6dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
