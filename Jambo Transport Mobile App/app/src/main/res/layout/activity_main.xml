<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Header with Search -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:background="@color/marshall_blue_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iokwe, user"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.02" />

    </LinearLayout>

    <!-- Bus Tracking Info Container -->
    <include
        android:id="@+id/bus_tracking_info"
        layout="@layout/bus_tracking_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:elevation="8dp"
        android:padding="20dp"
        android:layout_margin="0dp"/>

    <!-- Route Info Container -->
    <include
        android:id="@+id/route_info_container"
        layout="@layout/route_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:elevation="8dp"
        android:padding="20dp"
        android:layout_margin="0dp"/>

    <!-- Map View -->
    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:layout_below="@id/header_layout"/>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/btn_map"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/button_selected"
            android:text="Map"
            android:textColor="@color/marshall_blue"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="8dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:drawableTop="@drawable/ic_map"
            android:drawablePadding="2dp"/>

        <TextView
            android:id="@+id/btn_routes"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/button_unselected"
            android:text="Routes"
            android:textColor="#9E9E9E"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:drawableTop="@drawable/ic_bus"
            android:drawablePadding="2dp"
            android:paddingTop="8dp"/>

    </LinearLayout>

</RelativeLayout>